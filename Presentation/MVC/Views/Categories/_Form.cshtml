@model CreateEditCategortDto

<form asp-action="@(Model?.Id > 0 ? "Edit": "Create" )" 
      data-ajax-method="post" data-ajax="true" data-ajax-update="#modal .modal-body"
      data-ajax-success="onModalSuccess" data-ajax-failure="SweetError">
    @{
        if(Model?.Id > 0)
        {
            <input type="hidden" asp-for="Id" />
        }
    }
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <br/>
        <span asp-validation-for="Name" class="text-danger" ></span>
    </div>  
    <partial name="_ModalFooter" />
</form>