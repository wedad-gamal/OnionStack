<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/jquery-toast-plugin/dist/jquery.toast.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />


</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <partial name="_Aside" />
            <!-- Main Content -->
            <main class="col-md-10 ms-sm-auto px-4">
                <partial name="_Header" />
                @RenderBody()
            </main>
        </div>
    </div>
    <partial name="_Footer" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-toast-plugin/dist/jquery.toast.min.js"></script>
    <!-- Chart.js for charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.3.0/dist/chart.umd.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/role/edit-role.js" asp-append-version="true"></script>
    <script src="~/js/role/add-role.js" asp-append-version="true"></script>
    <script src="~/js/role/delete-role.js" asp-append-version="true"></script>
    <script src="~/js/role/roles-table.js" asp-append-version="true"></script>
    <script>
        // Pie Chart
        new Chart(document.getElementById('pieChart'), {
            type: 'doughnut',
            data: {
                labels: ['Total Order', 'Customer Growth', 'Total Revenue'],
                datasets: [{
                    data: [81, 22, 62],
                    backgroundColor: ['#ff4d4f', '#3bb77e', '#3498db'],
                    borderWidth: 0
                }]
            },
            options: {
                cutout: '70%',
                plugins: {legend: {display: false}},
            }
        });
        // Order Chart
        new Chart(document.getElementById('orderChart'), {
            type: 'line',
            data: {
                labels: ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday'],
                datasets: [{
                    label: 'Order',
                    data: [120, 190, 456, 300, 220, 380, 410],
                    borderColor: '#3bb77e',
                    backgroundColor: 'rgba(59,183,126,0.1)',
                    tension: 0.4,
                    fill: true,
                    pointBackgroundColor: '#3bb77e',
                }]
            },
            options: {
                plugins: {legend: {display: false}},
                scales: {y: {beginAtZero: true}}
            }
        });
        // Customer Map Chart
        new Chart(document.getElementById('customerMapChart'), {
            type: 'bar',
            data: {
                labels: ['Sun','Mon','Tue','Wed','Thu','Fri','Sat'],
                datasets: [{
                    label: 'Customers',
                    data: [40, 60, 80, 50, 70, 60, 90],
                    backgroundColor: '#ffc107',
                    borderRadius: 8
                }]
            },
            options: {
                plugins: {legend: {display: false}},
                scales: {y: {beginAtZero: true}}
            }
        });
        // Revenue Chart
        new Chart(document.getElementById('revenueChart'), {
            type: 'line',
            data: {
                labels: ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sept','Oct','Nov','Dec'],
                datasets: [
                    {
                        label: '2020',
                        data: [12, 19, 3, 5, 2, 3, 9, 15, 20, 25, 22, 30],
                        borderColor: '#3498db',
                        backgroundColor: 'rgba(52,152,219,0.1)',
                        tension: 0.4,
                        fill: true
                    },
                    {
                        label: '2021',
                        data: [22, 29, 15, 25, 12, 33, 19, 25, 30, 35, 32, 40],
                        borderColor: '#3bb77e',
                        backgroundColor: 'rgba(59,183,126,0.1)',
                        tension: 0.4,
                        fill: true
                    }
                ]
            },
            options: {
                plugins: {legend: {display: true}},
                scales: {y: {beginAtZero: true}}
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
