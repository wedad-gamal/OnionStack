
@model AssignRoleToUsersViewModel
@{
    ViewData["Title"] = "AssignRoleToUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Assign @Model.RoleName </h1>


<form asp-action="HandleAssignRemoveRolesToUser">

    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="RoleName" class="form-control"></label>
        <input asp-for="RoleName" class="form-control" value="@Model.RoleName" readonly />
        <span asp-validation-for="RoleName"></span>

    </div>
    <div class="form-group">

        @for (int i = 0; i < Model.Users.Count(); i++)
        {
            <input type="hidden" name="Users[@i].Name" value="@Model.Users[i].Name" />
            <input type="hidden" name="Users[@i].Id" value="@Model.Users[i].Id" />

            <input asp-for="Users[@i].IsAssigned" />
            <label asp-for="Users[@i].IsAssigned">@Model.Users[@i].Name</label>

            <br />
        }
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Edit</button>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </div>
</form>