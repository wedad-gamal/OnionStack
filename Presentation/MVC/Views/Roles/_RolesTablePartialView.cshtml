@model IEnumerable<RoleDto>
@if (Model.Any())
{
  <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(d => d.Id)
            </th>
            <th>
                @Html.DisplayNameFor(d => d.Name)
            </th>
            <th>
                Details
            </th>
            <th>
                Update
            </th>
            <th>
                Delete
            </th>
            <th>
                Assign To Users
            </th>


        </tr>
    </thead>
    <tbody id="roleTable">

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>


                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"> <i class="fas fa-eye"></i>Details</a>
                </td>
                <td>
                    @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"> <i class="fas fa-edit"></i>Edit</a> *@
                    <button class="btn btn-warning edit-role-btn" data-id="@item.Id"><i class="fas fa-edit"></i>Edit</button>

                </td>
                <td>
                    @* <a asp-action="ConfirmDelete" asp-route-id="@item.Id" class="btn btn-danger"> <i class="fas fa-trash"></i>Delete</a> *@
                    <button class="btn btn-danger confirm-delete-role-btn" data-id="@item.Id"><i class="fas fa-trash"></i>Delete</button>
                </td>
                <td>
                    <a asp-action="AssignOrRemoveRoleToUser" asp-route-id="@item.Name" class="btn btn-primary"> <i class="fas fa-edit"></i>Assign</a>

                </td>

            </tr>
        }
    </tbody>
</table>
}
else
{
    <div class="mt-3 alert-warning">
        <h2>No Roles</h2>
    </div>
}
